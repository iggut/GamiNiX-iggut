#CSS
#pulseaudio {
  padding-left: 10px;
  padding-right: 3px;
  margin-right: 4px;
}

#pulseaudio_muted {
  padding-left: 10px;
  padding-right: 3px;
  margin-right: 4px;
}

window#tint2,
window#tint22 {
  -GtkWidget-direction: bottom;
  background-color: rgba(0,0,0,0);
  border-color: rgba(0,0,0,0);
}



button#taskbar_normal grid {
  -GtkWidget-hexpand: false;
  padding-right: 0px;
  margin-right: 0px;
}

button#taskbar_normal image,
button#taskbar_active image,
button#taskbar_normal:hover image {
  -GtkWidget-vexpand: true;
  box-shadow: none;
  border: none;
  border-image: none;
  background-image: none;
  background: none;
  min-width: 16px;
  min-height: 16px;
  -gtk-icon-shadow: none;
}

button#taskbar_normal label,
button#taskbar_active label,
button#taskbar_normal:hover label {
  -GtkWidget-vexpand: true;
  -GtkWidget-hexpand: false;
  padding-left: 0.75mm;
  padding-top: 0px;
  padding-bottom: 0px;
  font: 0.3cm Sans;
}

button#taskbar_normal,
button#taskbar_active,
button#taskbar_normal:hover {
  padding-left: 1mm;
  padding-top: 0mm;
  padding-bottom: 0mm;
  background-image: none;
  border-radius: 8px;
  border-image: none;
  margin-right: 0px;
  margin-left: 3px;
  margin-top: 3px;
  margin-bottom: 3px;
  -GtkWidget-hexpand: false;
  -GtkWidget-vexpand: false;
  background-color: rgba(119,119,119,0.2);
  border-color: transparent;
  box-shadow: none;
}

grid#taskbar > :not(:last-child) button#taskbar_normal:hover,
grid#taskbar > :not(:last-child) button#taskbar_active,
grid#taskbar > :not(:last-child) button#taskbar_normal {
  border-radius: 0px;
  border-right: 1px solid alpha(@theme_fg_color,0.15);
}
button#taskbar_active {
  background-color: rgba(119,119,119,0.2);
  border-color: rgba(255,255,255,0.4);
}

button#taskbar_normal:hover,
button#taskbar_active:hover {
  background-color: rgba(176,176,176,0.22);
  border-color: rgba(234,234,234,0.44);
}

button#pager_normal,
button#pager_visible,
button#pager_focused {
  padding-left: 1.25mm;
  padding-right: 1.25mm;
  padding-top: 0.5mm;
  padding-bottom: 0.5mm;
  background-image: none;
  border-radius: 8px;
  border-image: none;
  margin-right: 0px;
  margin-left: 3px;
  margin-top: 3px;
  margin-bottom: 3px;
  font: 0.3cm Sans;
  background-color: rgba(119,119,119,0.0);
  border-color: rgba(119,119,119,0.0);
  box-shadow: none;
}

button#pager_focused {
